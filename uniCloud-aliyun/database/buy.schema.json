// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [
		"user_id",
		"customer_id",
		"package_name",
		"service_times",
		"amount",
		"purchase_date",
		"create_time"
	],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "系统自动生成"
		},
		"user_id": {
			"bsonType": "string",
			"description": "所属用户UID"
		},
		"customer_id": {
			"bsonType": "string",
			"description": "客户ID"
		},
		"package_name": {
			"bsonType": "string",
			"description": "套餐名称"
		},
		"service_times": {
			"bsonType": "int",
			"description": "服务次数"
		},
		"amount": {
			"bsonType": "double",
			"description": "金额（元）"
		},
		"purchase_date": {
			"bsonType": "string",
			"description": "购买日期"
		},
		"remark": {
			"bsonType": "string",
			"description": "备注"
		},
		"store_name": {
			"bsonType": "string",
			"description": "门店名称（可选）"
		},
		"create_time": {
			"bsonType": "long",
			"description": "创建时间戳"
		},
		"update_time": {
			"bsonType": "long",
			"description": "更新时间戳"
		}
	}
}
