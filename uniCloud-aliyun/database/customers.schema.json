{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"owner_uid": {
			"bsonType": "string",
			"description": "当前负责顾问UID"
		},
		"owner_name": {
			"bsonType": "string",
			"description": "负责人姓名快照"
		},
		"owner_history": {
			"bsonType": "array",
			"items": {
				"bsonType": "object",
				"properties": {
					"uid": { "bsonType": "string" },
					"changed_at": { "bsonType": "long" }
				}
			}
		}
	}
}
